.my-userinfo-container {
  height: 100%;
  background-color: #2b4b6b;
  align-items: center;
  justify-content: center;
}
.my-userinfo-container .top-box {
  height: 400rpx;
  background-color: #2b4b6b;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.my-userinfo-container .top-box .avatar {
  width: 90px;
  height: 90px;
  border-radius: 45px;
  border: 2px solid #FFF;
  box-shadow: 0 1px 5px black;
}
.my-userinfo-container .top-box .nickname {
  font-size: 16px;
  color: #FFF;
  font-weight: bold;
  margin-top: 10px;
}
.my-userinfo-container .panel-box {
  padding: 0 20px;
}
.my-userinfo-container .panel-box .panel-body {
  background-color: #ffffff;
  border-radius: 15px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.my-userinfo-container .panel-box .panel-body .panel-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  padding: 10px 0;
  font-size: 13px;
}
.my-userinfo-container .panel-box .panel-body .panel-item .icon {
  width: 35px;
  height: 35px;
}
.panel {
  background-color: #ffffff;
  border-radius: 10px;
}
.panel .panel-list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 15px;
  padding: 0 10px;
  line-height: 45px;
}

